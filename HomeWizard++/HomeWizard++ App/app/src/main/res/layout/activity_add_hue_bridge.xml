<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="idu.stenden.inf1i.homewizard.AddHueBridge">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Dummy item to prevent AutoCompleteTextView from receiving focus -->
        <LinearLayout
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_width="0px"
            android:layout_height="0px"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hueBridgeIP"
            android:layout_below="@+id/textView28"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/textView30"
            android:nextFocusUp="@id/textView28"
            android:nextFocusLeft="@id/textView28"/>

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Connect"
            android:id="@+id/btnHueBridgeConnect"
            android:background="@color/design_textinput_error_color_light"
            android:textColor="@color/abc_primary_text_material_dark"
            android:layout_below="@+id/hueBridgeIP"
            android:layout_alignParentStart="true"
            android:layout_alignEnd="@+id/hueBridgeIP"
            android:layout_marginTop="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Press the button on the Hue bridge before trying to connect."
            android:id="@+id/textView26"
            android:layout_below="@+id/textView27"
            android:layout_alignParentStart="true"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Please note:"
            android:id="@+id/textView27"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/btnHueBridgeConnect"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Hue Bridge IP address:"
            android:id="@+id/textView28"
            android:layout_below="@+id/textView30"
            android:layout_alignParentStart="true"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Add a Hue bridge"
            android:id="@+id/textView29"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Before you can add Phillips Hue lights you need to add a Hue bridge"
            android:id="@+id/textView30"
            android:layout_below="@+id/textView29"
            android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>
