<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="idu.stenden.inf1i.homewizard.AddChoise">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Homewizard Light/Switch"
        android:id="@+id/hmwzbtnlight"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phillips Hue"
        android:id="@+id/huebtnlight"
        android:layout_below="@+id/hmwzbtnlight"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/hmwzbtnlight" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Custom MQTT device"
        android:id="@+id/BtnAddCustom"
        android:layout_below="@+id/huebtnlight"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/huebtnlight" />
</RelativeLayout>
